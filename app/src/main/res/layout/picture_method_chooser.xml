<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/camera_choice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/gallery_choice"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_camera"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/gallery_choice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/camera_choice"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gallery_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/from_camera"
        app:layout_constraintEnd_toEndOf="@+id/camera_choice"
        app:layout_constraintStart_toStartOf="@+id/camera_choice"
        app:layout_constraintTop_toBottomOf="@+id/camera_choice" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/from_gallery"
        app:layout_constraintEnd_toEndOf="@+id/gallery_choice"
        app:layout_constraintStart_toStartOf="@+id/gallery_choice"
        app:layout_constraintTop_toBottomOf="@+id/gallery_choice" />
</android.support.constraint.ConstraintLayout>